<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Summary</th>
            <th scope="col">Start date</th>
            <th scope="col">End date</th>
            <th></th>
        </tr>
    </thead>
    <tboby>
        <% @projects.each do |project| %>
        <tr>
            <td><%= project.name %></td>
            <td><%= project.summary.truncate(100) %></td>
            <td><%= project.start_date %></td>
            <td><%= project.end_date %></td>
            <td>
                <%= link_to "Details", project_path(project), :class => 'btn btn-outline-secondary' %>
            </td>
        </tr>
        <% end %>
    </tboby>    
</table>